{
  "name": "open-agent-sdk",
  "version": "0.1.0-alpha.0",
  "description": "Open source agent SDK compatible with Claude Agent SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "cd packages/core && bun run build && mkdir -p ../../dist && cp -r dist/* ../../dist/",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "cd packages/core && npx tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "bun run build"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^20.0.0",
    "husky": "^8.0.3",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.21",
    "ai": "^6.0.70"
  },
  "publishConfig": {
    "access": "public"
  }
}
